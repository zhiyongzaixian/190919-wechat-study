/* pages/recommendSong/recommendSong.wxss */

.recommendSongContainer .header {
  position: relative;
}

.recommendSongContainer .header image {
  width: 100%;
  height: 300rpx;
}


.recommendSongContainer .date {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -100rpx;
  margin-top: -50rpx;
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;

}
.recommendSongContainer .date .day {
  font-size: 40rpx;
}


/* 每日推荐列表 */

.recommendList {
  position: relative;
  top: -20rpx;
  background: #fff;
  border-radius: 40rpx;
  padding:20rpx;

}

.recommendList .listHeader {
  height: 60rpx;
  line-height: 60rpx;
}

.recommendList .listHeader .changeMore {
  float: right;
  font-size: 28rpx;
  color: #333;
}

.scrollItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.scrollItem .musicImg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}


.scrollItem .musicContent {
  display: flex;
  flex-direction: column;
  height: 80rpx;
  margin-left: 30rpx;
}

.scrollItem .musicContent {
  height: 40rpx;
  line-height: 40rpx;
}

.scrollItem .musicContent .author {
  font-size: 26rpx;
}
.scrollItem .musicContent .musicName {
  font-size: 28rpx;
}


.scrollItem .radio {
  position: absolute;
  right: 0;
  height: 80rpx;
  line-height: 80rpx;
}
